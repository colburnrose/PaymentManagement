@model CreateViewModel
@{
    ViewData["Title"] = "Employee";
}

        <div class="col-md-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
                            <li class="breadcrumb-item"><a asp-controller="Employee" asp-action="Index">Employee List</a></li>
                            <li class="breadcrumb-item active" aria-current="page">New Employee</li>
                        </ol>
                    </nav><br /><br />
                    <form method="post" enctype="multipart/form-data" asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-row">
                                <div class="form-group col-md-2">
                                    <label asp-for="EmpNumber"></label>
                                </div>
                                <div class="form-group col-md-3">
                                    <input asp-for="EmpNumber" class="form-control" placeholder="EMP000" />
                                    <span asp-validation-for="EmpNumber" class="text-danger"></span>
                                </div>
                                <div class="col-md-2"></div>
                                <div class="form-group col-md-2">
                                    <label asp-for="DateJoined"></label>
                                </div>
                                <div class="form-group col-md-3">
                                    <input asp-for="DateJoined" class="form-control" type="date" asp-format="{0:MM-dd-yyyy}"/>
                                    <span asp-validation-for="DateJoined" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="form-group col-md-2">
                                    <label asp-for="FirstName"></label>
                                </div>
                                <div class="form-group col-md-3">
                                    <input asp-for="FirstName" class="form-control" placeholder="First Name" />
                                    <span asp-validation-for="FirstName" class="text-danger"></span>
                                </div>
                                <div class="col-md-2">
                                    <input asp-for="MiddleName" class="form-control" placeholder="Middle Name" />
                                    <span asp-validation-for="MiddleName" class="text-danger"></span>
                                </div>
                                <div class="form-group col-md-2">
                                    <label asp-for="LastName"></label>
                                </div>
                                <div class="form-group col-md-3">
                                    <input asp-for="LastName" class="form-control" placeholder="Last Name" />
                                    <span asp-validation-for="LastName" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="form-group col-md-2">
                                    <label asp-for="Gender"></label>
                                </div>
                                <div class="form-check col-md-3">
                                    <select class="form-control" asp-for="Gender">
                                        <option>Male</option>
                                        <option>Female</option>
                                    </select>
                                    <span asp-validation-for="Gender" class="text-danger"></span>
                                </div>
                                <div class="col-md-2"></div>
                                <div class="form-group col-md-2">
                                    <label asp-for="BirthDate"></label>
                                </div>
                                <div class="form-group col-md-3">
                                    <input asp-for="BirthDate" class="form-control" type="date" asp-format="{0:MM-dd-yyyy}"/>
                                    <span asp-validation-for="BirthDate" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="form-group col-md-2">
                                    <label asp-for="SSN"></label>
                                </div>
                                <div class="form-group col-md-3">
                                    <input asp-for="SSN" class="form-control" placeholder="Enter your SSN" />
                                    <span asp-validation-for="SSN" class="text-danger"></span>
                                </div>
                                <div class="col-md-2"></div>
                                <div class="form-group col-md-2">
                                    <label asp-for="Email"></label>
                                </div>
                                <div class="form-group col-md-3">
                                    <input asp-for="Email" class="form-control" />
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="form-group col-md-2">
                                    <label asp-for="PhoneNumber"></label>
                                </div>
                                <div class="form-group col-md-3">
                                    <input asp-for="PhoneNumber" class="form-control" placeholder="Enter your SSN" />
                                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                                </div>
                                <div class="col-md-2"></div>
                                <div class="form-group col-md-2">
                                    <label asp-for="PaymentMethod"></label>
                                </div>
                                <div class="form-group col-md-3">
                                    <select asp-for="PaymentMethod" class="form-control" asp-items="Html.GetEnumSelectList<PaymentManagement.Entity.Enums.PaymentMethod>()">
                                        <option selected="selected" value="">Select Payment Method</option>
                                    </select>
                                    <span asp-validation-for="PaymentMethod" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="form-group col-md-2">
                                    <label asp-for="StudentLoan"></label>
                                </div>
                                <div class="form-group col-md-3">
                                    <select asp-for="StudentLoan" class="form-control" asp-items="Html.GetEnumSelectList<PaymentManagement.Entity.Enums.StudentLoan>()">
                                        <option selected="selected" value="">Student Loan</option>
                                    </select>
                                    <span asp-validation-for="StudentLoan" class="text-danger"></span>
                                </div>
                                <div class="col-md-2"></div>
                                <div class="form-group col-md-2">
                                    <label asp-for="UnionMember"></label>
                                </div>
                                <div class="form-group col-md-3">
                                    <select asp-for="UnionMember" class="form-control" asp-items="Html.GetEnumSelectList<PaymentManagement.Entity.Enums.UnionMember>()">
                                        <option selected="selected" value="">Select Payment Method</option>
                                    </select>
                                    <span asp-validation-for="UnionMember" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="form-group col-md-2">
                                    <label asp-for="Role"></label>
                                </div>
                                <div class="form-group col-md-3">
                                    <input asp-for="Role" class="form-control" placeholder="Enter Role" />
                                    <span asp-validation-for="Role" class="text-danger"></span>
                                </div>
                                <div class="col-md-2"></div>
                                <div class="form-group col-md-1">
                                    <label asp-for="ImageUrl"></label>
                                </div>
                                <div class="form-group col-md-4">
                                    <div class="btn btn-primary btn-icon-text">
                                        <i class="fas fa-upload"></i>
                                        <input asp-for="ImageUrl" typle="file" value="Upload" />
                                        <span asp-validation-for="ImageUrl" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <label asp-for="Address"></label>
                                <input asp-for="Address" class="form-control" placeholder="Enter Address.." />
                                <span asp-validation-for="Address" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="City"></label>
                                <input asp-for="City" class="form-control" placeholder="Enter City/Town.." />
                                <span asp-validation-for="City" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="PostalCode"></label>
                                <input asp-for="PostalCode" class="form-control" placeholder="Enter Post Code.." />
                                <span asp-validation-for="PostalCode" class="text-danger"></span>
                            </div><br /><br />
                            <div class="form-group">
                                <button type="submit" class="btn btn-rounded btn-primary float-left"><i class="fas fa-plus-square" style="margin-right: 0.7em"></i>Save</button>
                                <a asp-action="Index" class="btn btn-rounded btn-primary float-right"><i class="fas fa-caret-square-left" style="margin-right: 0.7em"></i>Back</a>
                                <br />
                                <br />
                                <br />
                            </div>                        
                    </form>
                </div>
            </div>
        </div>

@section Scripts{ 
 @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

